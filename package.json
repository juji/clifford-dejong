{
  "name": "turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "prepare": "husky",
    "android": "cd apps/mobile && pnpm run android",
    "ios": "cd apps/mobile && pnpm run ios"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "bezier-easing": "^2.1.0",
    "glob": "^11.0.3",
    "rimraf": "^6.0.1",
    "uuid": "^11.1.0",
    "zustand": "^5.0.6"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.{cpp,h}": [
      "clang-format -i"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.7.1"
}
