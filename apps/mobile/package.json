{
  "name": "mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint:original": "eslint .",
    "lint": "echo \"No linting configured for mobile app\" && exit 0",
    "prestart": "watchman watch-del-all",
    "start": "react-native start",
    "test": "jest",
    "postinstall": "./setup.sh",
    "setup": "./setup.sh",
    "build": "pnpm run build:android && pnpm run build:ios",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace mobile.xcworkspace -scheme mobile -configuration Release -sdk iphoneos -quiet",
    "prescreenshot:ios": "react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/main.jsbundle --assets-dest ios",
    "screenshot:ios": "cd ios && fastlane screenshots"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/slider": "^4.5.7",
    "@react-native-vector-icons/lucide": "^12.2.0",
    "@react-native/codegen": "^0.80.2",
    "@react-native/new-app-screen": "0.80.1",
    "@react-navigation/bottom-tabs": "^7.4.2",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/native-stack": "^7.3.21",
    "@repo/core": "workspace:*",
    "@repo/state": "workspace:*",
    "@shopify/react-native-skia": "^2.1.1",
    "@tamagui/config": "^1.132.15",
    "@tamagui/lucide-icons": "^1.132.15",
    "clsx": "^2.1.1",
    "nativewind": "^4.1.23",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "react": "19.1.0",
    "react-native": "0.80.1",
    "react-native-mmkv": "^3.3.0",
    "react-native-reanimated": "^3.18.0",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "^4.13.1",
    "react-native-svg": "^15.12.0",
    "tailwindcss": "^3.4.17",
    "tamagui": "^1.132.15",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "19.0.0",
    "@react-native-community/cli-platform-android": "19.0.0",
    "@react-native-community/cli-platform-ios": "19.0.0",
    "@react-native/babel-preset": "0.80.1",
    "@react-native/eslint-config": "0.80.1",
    "@react-native/metro-config": "0.80.1",
    "@react-native/typescript-config": "0.80.1",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-native": "^0.73.0",
    "@types/react-test-renderer": "^19.1.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.29.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "codegenConfig": {
    "name": "AppSpecs",
    "type": "modules",
    "jsSrcsDir": "specs",
    "android": {
      "javaPackageName": "com.sampleapp.specs"
    },
    "ios": {
      "modulesProvider": {
        "NativeSampleModule": "NativeSampleModuleProvider"
      }
    }
  }
}
